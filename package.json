{
  "name": "sancho-pansa",
  "version": "1.0.0",
  "description": "A DJ's assistant app for managing your music files & playlists",
  "main": "dist/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "node scripts/clear-port.js && concurrently \"vite --host localhost\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "start:prod": "npm run build && electron .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emdoem/sancho-pansa_2.0.git"
  },
  "author": "Mateusz Maj",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/emdoem/sancho-pansa_2.0/issues"
  },
  "homepage": "https://github.com/emdoem/sancho-pansa_2.0#readme",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@eslint/js": "^9.36.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^38.3.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/inter": "^5.2.8",
    "@mui/joy": "^5.0.0-beta.52",
    "better-sqlite3": "^11.10.0",
    "music-metadata": "^11.11.0",
    "node": "^25.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
